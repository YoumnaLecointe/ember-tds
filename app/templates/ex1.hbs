{{page-title "Ex2"}}
<div class="card">
  <div class="card-header bg-primary text-light">Ex2: Service</div>
</div>

<div class="card-title justify-content-center">
  <span class="titre">Cliquez sur un service:</span>
</div>

<div class="container d-flex h-100 justify-content-center">
  <div class="row align-self-center">
    <ul>
      {{#each @model.services as |srv|}}
        <li class="list-group-item {{if srv.active "active"}}" {{action "toggleActive" srv}}>{{srv.name}} {{srv.price}}</li>
      {{/each}}
    </ul>
    <p> {{plural @model.countActive}}</p>
    <p class="total"> Total : {{format-currency @model.sumActive "$"}}</p>
    <div class="total">
      <input type="checkbox" id="promoCheck" name="promoCheck" value="">
      <Input type="text" id="promo" @value={{@model.code}} name="promo" placeholder="code promo"/>
    </div>
    <p class="total" id="remise"> Remise : {{format-currency @model.promoValue   "$"}}</p>
    <p class="total" id="total" > Total de la remise : {{format-currency @model.remise "$"}}</p>
  </div>
</div>

<style>
  .list-group-item{
    cursor: pointer;
    background-color: floralwhite;
  }
  .list-group-item:hover{
    background-color: #F6F2EB;
    color:black;
  }
  .titre{
    margin-left:9%;
    font-size:150%;
  }
  .total{
    background-color: floralwhite;
    border-radius: 3%;
    box-shadow: 1px 1px 8px #D8D8D8;
  }
</style>

